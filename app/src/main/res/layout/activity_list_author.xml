<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListAuthorActivity">


    <TextView
        android:id="@+id/author_id"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="14sp"
        tools:ignore="MissingConstraints,RtlCompat"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/booktitle"
        android:layout_width="187dp"
        android:layout_height="36dp"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/author_id"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bookcover"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/booktitle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/booksale"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bookcover"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/booksale"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/ebooksize"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/author"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/category"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ebooksize"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="188dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp" />


</android.support.constraint.ConstraintLayout>